MDScreen:

    MDBottomNavigation:
        #panel_color: "#eeeaea"
        selected_color_background: "darkblue"
        text_color_active: "lightgrey"

        MDBottomNavigationItem:
            name: 'Home'
            text: 'Home'
            icon: 'image python/icons8-home-64.png'
            rgb: 75,74,74


            Image:
                source: "image python/greenhouse.png"
                allow_stretch: True
                keep_ratio: True


            MDRectangleFlatIconButton:
                icon: "image python/icons8-temperature-inside-64.png"
                text: "  Heater"
                pos_hint: {"center_x": .5, "center_y": .5}
                font_size: "20sp"
                md_bg_color: app.theme_cls.primary_dark
                text_color: "white"

            MDRectangleFlatIconButton:
                icon: "image python/external-Cooler-propeller-others-inmotus-design-15.png"
                text: "  Cooler"
                pos_hint: {"center_x": .5, "center_y": .4}
                font_size: "20sp"
                md_bg_color: app.theme_cls.primary_dark
                text_color: "white"

            MDRectangleFlatIconButton:
                icon: "image python/icons8-thirst-50.png"
                text: "  Water"
                pos_hint: {"center_x": .5, "center_y": .3}
                font_size: "20sp"
                md_bg_color: app.theme_cls.primary_dark
                text_color: "white"
            MDRectangleFlatIconButton:
                icon: "image python/icons8-ozone-structure-64.png"
                text: "  Ozon"
                pos_hint: {"center_x": .5, "center_y": .2}
                font_size: "20sp"
                md_bg_color: app.theme_cls.primary_dark
                text_color: "white"

        MDBottomNavigationItem:
            name: 'Value'
            text: 'Value'
            icon: 'image python//icon_value.png'
            rgb: 75,74,74



            MDBoxLayout:
                orientation: "vertical"
                MDTopAppBar:
                    title: "VALUE"
                ScrollView:



        MDBottomNavigationItem:
            name: 'Help'
            text: 'help'
            icon: 'image python//help-icon-3.png'
            rgb: 75,74,74
            MDBoxLayout:
                orientation: "vertical"

                MDTopAppBar:
                    title: "HELP"

                ScrollView:

                    MDLabel:
                        text: "•None-button responsible for changing the modes of the greenhouse\n•Heater-button responsible for turning the heater on and off\n•Cooler-button responsible forturning the ventilation system on and off\n•Water-button responsible for turning on and off necessary water for plant life\n•Ozon-button responsible forsaturation oxygen with ozone"
                        font_size: '20sp'
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: 'center'





