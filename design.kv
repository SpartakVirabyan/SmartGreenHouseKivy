Screen:
    BoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "GreenHouse"
            elevation: 4

        MDBottomNavigation:
            panel_color: .1,.182,.244,.255

            MDBottomNavigationItem:
                name: 'home'
                text: "Home"
                icon: 'image python//icons8-home-64.png'

                Image:
                    source: 'image python//93z_2206_w009_n001_145b_p14_145.jpg'
                    pos_hint: {'center_y':0.8}
                MDRaisedButton:
                    id: button
                    text: "Choose plant"
                    pos_hint: {"center_x": 0.5, "center_y": 0.53}
                    on_release: app.menu.open()
                    md_bg_color: app.theme_cls.primary_dark
                    text_color: "white"

                MDBoxLayout:
                    orientation: "vertical"
                    pos_hint: {'center_x':0.2, 'center_y':0.3}
                    adaptive_height: True
                    spacing: 20


                    MDRectangleFlatIconButton:
                        md_bg_color: app.theme_cls.primary_dark
                        text_color: "white"
                        icon: 'image python//icons8-temperature-inside-64.png'
                        text: "Heating"
                        pos_hint: {"center_x":.5}
                        on_press: app.button("Heating")



                    MDRectangleFlatIconButton:
                        md_bg_color: app.theme_cls.primary_dark
                        text_color: "white"
                        icon: 'image python//external-Cooler-propeller-others-inmotus-design-15.png'
                        text: "Cooling"
                        pos_hint: {"center_x":.5}
                        on_press: app.button("Cooling")


                    MDRectangleFlatIconButton:
                        md_bg_color: app.theme_cls.primary_dark
                        text_color: "white"
                        icon: 'image python//icons8-thirst-50.png'
                        text: "Water"
                        pos_hint: {"center_x":.5}
                        on_press: app.button("Water")


                    MDRectangleFlatIconButton:
                        md_bg_color: app.theme_cls.primary_dark
                        text_color: "white"
                        icon: 'image python//icons8-ozone-structure-64.png'
                        text: "Ozon"
                        pos_hint: {"center_x":.5}
                        on_press: app.button("Ozon")
                MDLabel:
                    text: "Soil moisture"
                    pos_hint: {"center_x":0.9, "center_y":0.4}
                MDLabel:
                    text: "Air moisture"
                    pos_hint: {"center_x":0.9, "center_y":0.3}
                MDLabel:
                    text: "Air temperature"
                    pos_hint: {"center_x":0.9, "center_y":0.2}
                MDLabel:
                    id: soil
                    text: ""
                    pos_hint: {"center_x":1.3, "center_y":0.4}
                MDLabel:
                    id: humidity
                    text: ""
                    pos_hint: {"center_x":1.3, "center_y":0.3}
                MDLabel:
                    id: temperature
                    text: ""
                    pos_hint: {"center_x":1.3, "center_y":0.2}

            MDBottomNavigationItem:
                name: 'screen 2'
                text: "Help"
                icon: 'image python//help-icon-3.png'

                MDLabel:
                    text: "pyton"
                    halign: 'center'

            MDBottomNavigationItem:
                name: 'screen 3'
                text: "Feedback"
                icon: 'image python//icons8-comments-64.png'

                MDLabel:
                    text: "pyton"
                    halign: 'center'