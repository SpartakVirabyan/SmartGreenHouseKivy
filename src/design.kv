Screen:
    BoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            id: toolbar
            title: "GreenHouse"
            elevation: 4
            left_action_items: [["menu", lambda x: app.dropdown.open()]]

        MDBottomNavigation:
            panel_color: .1,.182,.244,.255

            MDBottomNavigationItem:
                name: 'home'
                text: "Home"
                icon: 'images//icons8-home-64.png'

                Image:
                    source: 'images//93z_2206_w009_n001_145b_p14_145.jpg'
                    pos_hint: {'center_y':0.8}

                MDBoxLayout:
                    orientation: "vertical"
                    pos_hint: {'center_x':0.2, 'center_y':0.3}
                    adaptive_height: True
                    spacing: 20


                    MDRectangleFlatIconButton:
                        id: Heating
                        text_color: "white"
                        md_bg_color: app.theme_cls.primary_dark
                        icon: 'images//icons8-temperature-inside-64.png'
                        text: "Heating"
                        pos_hint: {"center_x":.5}
                        on_press: app.button("Heating")

                    MDRectangleFlatIconButton:
                        id: Cooling
                        md_bg_color: app.theme_cls.primary_dark
                        text_color: "white"
                        icon: 'images//external-Cooler-propeller-others-inmotus-design-15.png'
                        text: "Cooling"
                        pos_hint: {"center_x":.5}
                        on_press: app.button("Cooling")


                    MDRectangleFlatIconButton:
                        id: Water
                        md_bg_color: app.theme_cls.primary_dark
                        text_color: "white"
                        icon: 'images//icons8-thirst-50.png'
                        text: "Water"
                        pos_hint: {"center_x":.5}
                        on_press: app.button("Water")


                    MDRectangleFlatIconButton:
                        id: Ozon
                        md_bg_color: app.theme_cls.primary_dark
                        text_color: "white"
                        icon: 'images//icons8-ozone-structure-64.png'
                        text: "Ozon"
                        pos_hint: {"center_x":.5}
                        on_press: app.button("Ozon")

                MDLabel:
                    text: "Soil moisture"
                    pos_hint: {"center_x":0.9, "center_y":0.4}
                MDLabel:
                    text: "Air moisture"
                    pos_hint: {"center_x":0.9, "center_y":0.3}
                MDLabel:
                    text: "Air temperature"
                    pos_hint: {"center_x":0.9, "center_y":0.2}
                MDLabel:
                    id: soil
                    text: ""
                    pos_hint: {"center_x":1.3, "center_y":0.4}
                MDLabel:
                    id: humidity
                    text: ""
                    pos_hint: {"center_x":1.3, "center_y":0.3}
                MDLabel:
                    id: temperature
                    text: ""
                    pos_hint: {"center_x":1.3, "center_y":0.2}

            MDBottomNavigationItem:
                name: 'screen 2'
                text: "Help"
                icon: 'images//help-icon-3.png'

                MDLabel:
                    text: "Use top bar to change greenhouse modes\nHeater-button responsible for turning the heater on and off\nCooler-button responsible for turning the ventilation system on and off\nWater-button responsible for turning on and off necessary water for plant life\nOzon-button responsible for saturation oxygen with ozone"
                    halign: 'center'

            MDBottomNavigationItem:
                name: 'screen 3'
                text: "Feedback"
                icon: 'images//icons8-comments-64.png'

                MDLabel:
                    text: "Â©To contact SPARTA \n sparta.info2023@gmail.com \n +37499918631/+37494793697/+37477114429 \n Yerevan, Armenia, Mamikoniants 52,\n Yerevan state college of Informatics"
                    halign: 'center'